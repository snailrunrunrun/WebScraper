@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Api Console</title>
    <link href="@Url.Content("~/content/apiconsole.css")" rel="stylesheet">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
</head>
<body ng-app="ramlConsoleApp" ng-cloak id="raml-console-unembedded">
    <div style="position:relative; height: 100vh; overflow: auto;">
        <raml-console src="@Url.Action("Raw", "Raml", new { version = "0.8" })" with-root-documentation></raml-console>
    </div>
    <script src="@Url.Content("~/scripts/apiconsole/vendor.js")"></script>
    <script src="@Url.Content("~/scripts/apiconsole/app.js")"></script>
</body>
</html>